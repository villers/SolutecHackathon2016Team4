@import '../node_modules/angular-material/angular-material.css';

background = #27332c

/**
* Base style
*/

*, *:before, *:after // reset
  box-sizing border-box

html, body
  height 100%

body // base
  background-color background
  color #fff
  font-family 'Open Sans', sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

textarea:hover, // fix outline, we don't need it in this case
input:hover,
textarea:active,
input:active,
textarea:focus,
input:focus,
button:focus,
button:active,
button:hover
  outline 0 !important
  appearance none

*::-webkit-scrollbar-track // webkit scrollbar styling
  box-shadow inset 0 0 6px rgba(0, 0, 0, .3)
  background-color #bdc3c7

*::-webkit-scrollbar
  width 10px
  background-color #F5F5F5

*::-webkit-scrollbar-thumb
  background #ffffff linear-gradient(45deg,
  rgba(255, 255, 255, .2) 25%,
  transparent 25%,
  transparent 50%,
  rgba(255, 255, 255, .2) 50%,
  rgba(255, 255, 255, .2) 75%,
  transparent 75%,
  transparent)

input:-webkit-autofill, // remove autofill yellow background and black text in webkit
input:-webkit-autofill:hover,
input:-webkit-autofill:focus,
input:-webkit-autofill:active
  -webkit-transition-delay 9999s
  -webkit-transition color 9999s ease-out, background-color 9999s ease-out

@keyframes shake // shake animation for error
  10%, 90%
    transform translate3d(-2px, 0, 0)

  20%, 80%
    transform translate3d(4px, 0, 0)

  30%, 50%, 70%
    transform: translate3d(-8px, 0, 0)

  40%, 60%
    transform translate3d(8px, 0, 0)
