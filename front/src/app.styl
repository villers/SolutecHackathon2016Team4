@import '../node_modules/angular-material/angular-material.css';
@import '../node_modules/material-design-iconic-font/dist/css/material-design-iconic-font.css';
@import '../node_modules/lf-ng-md-file-input/dist/lf-ng-md-file-input.css';

// Utilities
.full-height
  height: 100%
  box-sizing: border-box

.full-width
  width: 100%
  max-width: 100%
  box-sizing: border-box

// Margin
.margin-normal
  margin: 16px

// Margin 0 à 200 de 10 en 10
$i = 0
for n in 0..((200 - $i) / 10)
  .margin-{$i}
    margin: ($i)px !important
  .margin-top-{$i}
    margin-top: ($i)px !important
  .margin-left-{$i}
    margin-left: ($i)px !important
  .margin-bottom-{$i}
    margin-bottom: ($i)px !important
  .margin-right-{$i}
    margin-right: ($i)px !important
  $i = $i + 10

// Padding
.padding-normal
  padding: 16px
.padded-content-page
  padding: 16px 24px

// Padding 0 à 200 de 10 en 10
$i = 0
for n in 0..((200 - $i) / 10)
  .padding-{$i}
    padding: ($i)px !important
  .padding-top-{$i}
    padding-top: ($i)px !important
  .padding-left-{$i}
    padding-left: ($i)px !important
  .padding-bottom-{$i}
    padding-bottom: ($i)px !important
  .padding-right-{$i}
    padding-right: ($i)px !important
  $i = $i + 10

// Opacity 0 à 1 de 0.1 en 0.1
$i = 0
for n in 0..((1 - $i) / 0.1)
  .opacity-{round($i * 100)}
    opacity: $i !important
  $i = $i + 0.1

// Positioning
.position-absolute
  position: absolute
.position-relative
  position: relative

// Color inherit
.color-inherit
  color: inherit !important

// Display classes
.display-block
  display: block !important
.display-inline-block
  display: inline-block !important
.display-inline
  display: inline !important

// Clearfix
.clear:before,
.clear:after
  content: " "
  display: table
.clear:after
  clear: both

// Round
.make-round
  border-radius: 50%

// Overfflow
.overflow-visible
  overflow: visible
.overflow-auto
  overflow: auto
.overflow-hidden
  overflow: hidden

// Not selectable
.no-select
  user-select: none

// No shadow
.no-shadow
  box-shadow: none !important

// full background image
.full-image-background
  background-size: cover
  background-position: center

// md-icon height auto
md-icon[md-font-icon]
  height auto


*::-webkit-scrollbar-track // webkit scrollbar styling
  box-shadow inset 0 0 6px rgba(0, 0, 0, .3)
  background-color #bdc3c7

*::-webkit-scrollbar
  width 10px
  background-color #F5F5F5

*::-webkit-scrollbar-thumb
  background #ffffff linear-gradient(45deg,
  rgba(255, 255, 255, .2) 25%,
  transparent 25%,
  transparent 50%,
  rgba(255, 255, 255, .2) 50%,
  rgba(255, 255, 255, .2) 75%,
  transparent 75%,
  transparent)

@keyframes shake // shake animation for error
  10%, 90%
    transform translate3d(-2px, 0, 0)

  20%, 80%
    transform translate3d(4px, 0, 0)

  30%, 50%, 70%
    transform: translate3d(-8px, 0, 0)

  40%, 60%
    transform translate3d(8px, 0, 0)

